<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dialog_padding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_quest_actor_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/textAppearanceMedium"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/dialog_quest_actor_person_race"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/textAppearanceMedium"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/dialog_quest_actor_person_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/textAppearanceMedium"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/dialog_quest_actor_person_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/textAppearanceMedium"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/dialog_quest_actor_person_profession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/textAppearanceMedium"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/dialog_quest_actor_person_mastery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/textAppearanceMedium"
        android:visibility="gone"/>

</LinearLayout>