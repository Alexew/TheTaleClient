<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/widget_request_action_view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/textAppearanceMedium"
        android:textColor="@color/common_link"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/widget_request_action_view_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyle"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/widget_request_action_view_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/textAppearanceSmall"
        android:textColor="@color/common_error"
        android:visibility="gone"/>

</merge>